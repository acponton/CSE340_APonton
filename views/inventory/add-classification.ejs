<h1>Add New Classification</h1>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<section class="form-wrapper">
    <form action="/inv/add-classification" method="post" class="account-form">

        <label for="classification_name">Classification Name</label>
        <p class="form-note">
            Classification names cannot contain spaces or special characters.
        </p>

        <input 
            type="text" 
            id="classification_name" 
            name="classification_name" 
            required
            pattern="^[A-Za-z0-9]+$"
            title="Letters and numbers only. No spaces or special characters."
        >

        <button type="submit" class="btn">Add Classification</button>
    </form>
</section>